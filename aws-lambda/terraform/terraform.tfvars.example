# AWS Configuration
aws_region  = "eu-central-2"  # EU Zurich
environment = "dev"

# Project Configuration
project_name = "task-automation"

# Lambda Configuration
lambda_memory_size        = 512
lambda_timeout            = 30
lambda_log_retention_days = 14

# SQS Configuration
sqs_visibility_timeout = 60
sqs_message_retention  = 1209600 # 14 days
sqs_max_receive_count  = 3

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"
dynamodb_ttl_days     = 7

# EventBridge Configuration
task_generation_schedule = "rate(5 minutes)"

# Notification Configuration
notification_email         = "admin@example.com"
enable_email_notifications = false

# Lambda JAR paths (relative to terraform directory)
lambda_jar_base_path = "../lambda"
